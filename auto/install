cat << END >> $L_MAKEFILE

install:
	test -d /usr/local/lksocks5 || mkdir -p /usr/local/lksocks5
	test -d /usr/local/lksocks5/config || cp -rf config /usr/local/lksocks5/config
	test -d /usr/local/lksocks5/log || mkdir -p /usr/local/lksocks5/logs
	test -d /usr/local/lksocks5/sbin || mkdir -p /usr/local/lksocks5/sbin
	test -d /usr/local/lksocks5/certificate/ || cp -rf certificate /usr/local/lksocks5/certificate
	cp objs/lksocks5 /usr/local/lksocks5/sbin/
END

cat << END >> Makefile

build:
	\$(MAKE) -f $L_MAKEFILE

install:
	\$(MAKE) -f $L_MAKEFILE install

upgrade:

END
